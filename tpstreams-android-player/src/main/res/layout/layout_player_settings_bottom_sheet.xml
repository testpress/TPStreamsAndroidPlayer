<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet"
    android:paddingBottom="24dp">

    <!-- Drag handle -->
    <View
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="#CCCCCC" />

    <LinearLayout
        android:id="@+id/quality_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_quality"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quality"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical" />
            
        <TextView
            android:id="@+id/quality_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1080p"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp" />
            
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_chevron_right"
            android:layout_gravity="center_vertical"
            app:tint="#757575" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/captions_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_captions"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Captions"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical" />
            
        <TextView
            android:id="@+id/captions_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Off"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp" />
            
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_chevron_right"
            android:layout_gravity="center_vertical"
            app:tint="#757575" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/playback_speed_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_playback_speed"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Playback Speed"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical" />
            
        <TextView
            android:id="@+id/playback_speed_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.00x"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp" />
            
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_chevron_right"
            android:layout_gravity="center_vertical"
            app:tint="#757575" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/download_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/download_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_download" />

        <TextView
            android:id="@+id/download_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/download"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical" />
            
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_chevron_right"
            android:layout_gravity="center_vertical"
            app:tint="#757575" />
    </LinearLayout>
</LinearLayout> 